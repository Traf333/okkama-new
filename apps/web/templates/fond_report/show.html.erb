<h1 class='text-center'>Fond Reports</h1>

<%=
  form_for :fond_report, routes.path(:fond_report), enctype: 'multipart/form-data', class: 'mt-5' do
    div class: 'form-row' do
      div class: 'form-group col-md-6' do
        label :transactions, for: 'sourceFile'
        file_field :source, class:'form-control-file', id: 'sourceFile'
        div class: 'form-text text-muted small' do
          'Please select a transaction file, the name must consist of English characters'
        end
      end
      div class: 'form-group col-md-6' do
        label :reports, for: 'reportsFile'
        file_field :reports, multiple: true, name: 'fond_report[reports][]', class:'form-control-file', id: 'reportsFile'
        div class: 'form-text text-muted small' do
          'Please select report files, the name must consist of English characters'
        end
      end
    end
    div class: 'form-row' do
      div class: 'form-group col-md-6' do
        label :encoding
        select :encoding, [['UTF 8', 'utf-8'], ['Windows 1251', 'windows-1251']], class:'custom-select'
        div class: 'form-text text-muted small' do
          'Please select encoding for Unix or Windows systems'
        end
      end
    end
    submit 'Generate reports', class: 'btn btn-dark btn-block'
  end
%>
